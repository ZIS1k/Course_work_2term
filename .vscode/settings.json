{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build all files",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/main.c",
                "${fileDirname}/ui_interface.c",
                "${fileDirname}/parser.c",
                "${fileDirname}/integral.c",
                "${fileDirname}/globals.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lncurses",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}