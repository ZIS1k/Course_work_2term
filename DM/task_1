#include <stdio.h>
#include <locale.h>
#define MAX_SIZE 1000000
//5.	Переставить биты в целом числе в обратном порядке.  

int input(){
  puts("Введите число:");
  unsigned int intputNUM;
  while (scanf("%d", &intputNUM) != 1) {
    printf("Вы ввели что-то не так! Попробуйте ещё раз.\n");
    fseek(stdin, 0, SEEK_END); // очистка буфера
  }
  
  return intputNUM;
}
int conversion(int entrance)
{
  int bitNUM;
  int length = 0;
  int remains = 0;
  int dozens = 0;
  for (int i = 0; entrance > 1; i++){
    remains = entrance%10;
    entrance/=10;
    bitNUM += dozens*remains;
  }


  int size;
  long long *arr[MAX_SIZE];
	*arr = malloc(size * sizeof(double));
	if (arr == NULL) {
		printf("Ошибка выделения памяти\n");
		exit(1); // Завершение программы при ошибке выделения памяти
	}
	

}

void main()
{
  setlocale(LC_ALL, "rus");
  unsigned int number = input();

  system("pause");
}